<h1>Edit review for <%= @location[:name] %></h1>

<form action="/review/<%= @reviews[:id] %>/update" method="post">
  <div class="form-group">
    <label>Is <%= @location[:name] %> Worth Going to?</label>
    <select class="form-control" name="worth_going_to">
      <% if @review[:worth_going_to] %>
        <option value="1" selected>Yes</option>
        <option value="0">No</option>
      <% else %>
        <option value="1">Yes</option>
        <option value="0" selected>No</option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" rows="3" name="comments"><%= @rsvp[:comments] %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>